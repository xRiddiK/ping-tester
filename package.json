{
    "name": "ping-monitor",
    "version": "2.1.0",
    "main": "main.js",
    "build": {
        "appId": "com.jxcs.pingmonitor",
        "productName": "Ping Monitor",
        "compression": "maximum",
        "asar": true,
        "files": [
            "main.js",
            "preload.js",
            "renderer/**/*",
            "package.json"
        ],
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": [
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "portable": {
            "useZip": true
        }
    },
    "type": "commonjs",
    "scripts": {
        "start": "electron .",
        "dev": "electronmon .",
        "build": "electron-builder"
    },
    "dependencies": {
        "ping": "^0.4.4"
    },
    "devDependencies": {
        "electron": "^33.0.0",
        "electron-builder": "^26.0.12",
        "electronmon": "^2.0.4"
    }
}
